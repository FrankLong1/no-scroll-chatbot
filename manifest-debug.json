{
  "manifest_version": 3,
  "name": "AI Chat Auto-Scroll Blocker (DEBUG)",
  "version": "1.0.1",
  "description": "DEBUG VERSION - Logs all scroll attempts to console for debugging.",
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*"
      ],
      "js": ["content-debug.js"],
      "run_at": "document_start"
    }
  ]
}